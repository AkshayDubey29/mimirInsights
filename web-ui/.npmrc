# NPM Performance Optimizations for Docker builds
# ===============================================

# Disable unnecessary features for speed
fund=false
audit=false
update-notifier=false
progress=false

# Network optimizations
maxsockets=15
network-timeout=300000
fetch-timeout=300000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Cache optimizations
prefer-offline=true
cache-min=86400

# Reduce verbosity
loglevel=error

# Parallel downloads
parallel=true

# Skip optional dependencies that aren't needed
optional=false

# Faster registry
registry=https://registry.npmjs.org/ 